<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table>
  <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
        </dl>
      </td>
      <td class="list_actions">
       <%= link_to 'description', product, class: 'material-icons', id: 'showp' %>
       <%= link_to 'edit', edit_product_path(product), class: 'material-icons', id: 'editp' %>
       <%= link_to 'delete', product, class: 'material-icons', id: 'destroyp',method: :delete, data: { confirm: 'Are you sure?' } %> 
      </td>
    </tr>
  <% end %>
</table>
<br>
<a  id="producta" class="material-icons" href="/products/new">add</a>
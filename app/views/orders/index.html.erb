<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'description', order, id: 'showo',class: 'material-icons' %></td>
        <td><%= link_to 'edit', edit_order_path(order), id: 'edito',class: 'material-icons' %></td>
        <td><%= link_to 'delete', order, id: 'destroyo',class: 'material-icons',method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add', new_order_path, class: 'material-icons', id: 'ordera' %>

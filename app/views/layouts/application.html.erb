<!DOCTYPE html>
<html>
  <head>
    <title>E-commerce Website</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body class='<%= controller.controller_name %>'>
  	<div id="banner">
  		<%= image_tag 'logo-big-shopping.png', alt: 'The Pragmatic Bookshelf' %>
  		<span class="title"><%= @page_title %></span>
  	</div>
  	<div id="columns">
  		<div id="side">
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>
        </div> 
    			<ul>
    				<li><a class="material-icons" href="/">home</a> Home</li>
    			</ul>

          <div>
            <a class="loginsiBtn" href="/admin">Login</a>
          </div>

          <% if session[:user_id] %>
            <ul>
              <li><%= link_to 'shopping_basket', orders_path, :class => 'material-icons' %> Orders</li>
              <li><%= link_to 'shopping_cart', products_path, :class => 'material-icons' %> Products</li>
              <li><%= link_to 'people', users_path, :class => 'material-icons' %> Users</li>
            </ul>
            <%= button_to 'Logout', logout_path, :class => 'logoutBtn' ,method: :delete %>
          <% end %>
    		</div>
    		<div id="main">
      		<%= yield %>
    		</div>
    	</div>
  </body>
</html>
